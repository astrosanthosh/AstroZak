<?xml version="1.0" encoding="UTF-8"?>

<phpunit
		bootstrap = "bootstrap.php"
		backupGlobals="false"
		backupStaticAttributes="false"
		colors="true"
		convertErrorsToExceptions="true"
		convertNoticesToExceptions="true"
		convertWarningsToExceptions="true"
		processIsolation="false"
		stopOnFailure="false"
		syntaxCheck="false"
>

<testsuites>
	<testsuite name="AstroZak">
		<file>SwephTest.php</file>
		<file>DTTest.php</file>
		<file>PlanetTest.php</file>
		<file>SignTest.php</file>
		<file>PlanetHoursTest.php</file>
		<file>TimePeriodTest.php</file>
		<file>HoroscopeTest.php</file>
	</testsuite>
</testsuites>

<logging>
	<log type="coverage-html" target="./coverage" charset="UTF-8"/>
</logging>

</phpunit>
